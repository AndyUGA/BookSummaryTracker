   <body>
    <% include ReusableComponents/navbar.ejs %>

         <a class="navbar-brand" href="/getListOfBooks">Home</a>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
         </div>
      </nav>

      <!--
      <button> Click Me! </button>
    -->

      <div class="table-responsive">

         <table class="table  table-hover">
            <thead class = "thead-dark">
               <tr>
                  <th scope="col">Current Books I'm Reading</th>
                  <!--
                     <th scope="col">Delete Book</th>
                     -->
               </tr>
            </thead>

            <tbody>

               <tr>
                 <% for(var i=0; i < result.length; i++) { %>
                 <%if (result[i].name != 'system.indexes') { %>
                  <td>
                     <a  class = "darkMode" href="/<%=result[i].name %>/getNotes/">
                     <%= result[i].name %>
                     </a>
                  </td>
                  <!--
                     <td>
                       <form method="POST" action="/<%= result[i].name %>/DeleteCollection?_method=DELETE">

                         <input type="hidden" name="_method" value="DELETE"/>
                         <button type="submit">
                             <i class="far fa-trash-alt"></i>
                         </button>
                       </form>
                     </td>
                     -->
               </tr>
               <% } %>
               <% } %>
            </tbody>
         </table>
      </div>
      <div class = "noteTitle">
         <a href="/BookEntryForm"> <i class="fas fa-pencil-alt" title="Create Book Entry"></i>  </a>
      </div>
</html>

<script>
$(document).ready(function(){
  $("button").click(function(){

      $("*").css("background-color", "white");
      $("*").css("color", "white");
      $(".darkMode").css("background-color", "white");
      $(".darkMode").css("color", "black");

  });
});
</script>
